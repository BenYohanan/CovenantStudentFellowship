@model Core.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Main Wrapper -->
<div class="main-wrapper" style="padding-top:100px;">
    <div class="account-content">
        <div class="container">

            <div class="account-box">
                <div class="account-wrapper">

                    <h3 class="account-title">Forgot Password?</h3>
                    <p class="account-subtitle">Enter your email to get a password reset link</p>

                    <!-- Account Form -->
                    <div class="form-group">
                        <label>Email Address</label>
                        <input class="form-control" type="text" id="passwordResetEmail" required>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary account-btn" type="submit" onclick="SetNewPassword()">Reset Password</button>
                    </div>
                    <div class="account-footer">
                        <p>Remembered your password? <a href="~/Account/Login">Login</a></p>
                    </div>
                    <!-- /Account Form -->

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Main Wrapper -->