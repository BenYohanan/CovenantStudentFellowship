
@{
    ViewData["Title"] = "Create Blog";
    Layout = Session.GetRoleLayout();
}


<div class="main-wrapper">
    <!-- Page Wrapper -->
    <div class="page-wrapper" style="padding-top:100px;">
        <!-- Page Content -->
        <div class="content container-fluid">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row align-items-center text-center">
                    <div class="col">
                        <h3 class="page-title">Create Blog</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 pt-3">
                    <div class="row justify-content-center">
                        <div class="col-md-12 pt-4">
                            <h4 class="text-center" style="color:dodgerblue">BLOG POLICY</h4>
                            <p class="pt-0 tickcheck1" style="color: #4c5b64;"><i class="fa fa-check-circle" style="font-size: 25px;"></i>  The main purpose should be to add meaning to lives</p>
                            <p class="pt-0 tickcheck1" style="color: #4c5b64;"><i class="fa fa-check-circle" style="font-size: 25px;"></i>  No use of abusive word</p>
                            <p class="pt-0 tickcheck1" style="color: #4c5b64;"><i class="fa fa-check-circle" style="font-size: 25px;"></i>  No write up should project a religion as bad</p>
                           
                        </div>
                    </div>
                </div>
                <div class="col-md-9" id="primaryInfo">
                    <div class="tab-content">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Blog Category<span class="text-danger">*</span></label>
                                <select class="form-control blogDisplay select" required id="blogCategoryId" asp-items="@(new SelectList(@ViewBag.BlogCategory,  "Id", "Name" ))"> </select>
                            </div>

                            <div class="col-md-6  form-group">
                                <label>Blog Title<span class="text-danger">*</span></label>
                                <input class="form-control blogDisplay" type="text" id="title">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12  form-group">
                                <label>About Me<span class="text-danger">*</span></label>
                                <textarea rows="6" class="form-control blogDisplay" placeholder="A brief information about you" id="aboutMe"></textarea>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary" id="primaryInfo"  onclick="hidePrimaryInfo()">Next</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-9" style="display: none;" id="blogMainContent">
                    <div class="col-10 offset-1 p-3">
                        <div class="form-group">
                            <label>Blog Content<span class="text-danger">*</span></label>
                            <textarea rows="4" class="form-control summernote" placeholder="Enter your message here" id="blogContent"></textarea>
                        </div>
                        <div class="row text-center">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary" onclick="showPrimaryInfo()">Previous</button>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary" id="emergencyContactBtn" onclick="CreateBlog()">Next</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Content -->
<!-- /Page Wrapper -->
