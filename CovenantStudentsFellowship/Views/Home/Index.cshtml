        </div>
    </header>
    <!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center" style="background: url(@Model?.PictureViewModel?.MainUrl)top center; width:100%; height:100vh; background-size:cover; position:relative; padding:0px;">
