                            <ul>
                                <li>
                                    <a href="#">Who we are</a>
                                </li>
                                <li>
                                    <a href="#">Our History</a>
                                </li>
                                <li>
                                    <a href="#">Our Core Value</a>
                                </li>
                                <li>
                                    <a href="#">Governing council</a>
                                </li>
                                <li>
                                    <a href="#">Our Philosophy</a>
                                </li>
                                <li>
                                    <a href="#">Our Mission</a>
                                </li>
                                <li>
                                    <a href="#">Our Vision</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="Blog" asp-action="Index">Blog</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" href="#events">Events</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="User" asp-action="Photos">Gallery</a>
                        </li>
