    <link href="~/CSF/assets/css/style.css" rel="stylesheet" />

    <script>

        function errorAlert(message) {
            Swal.fire({
                icon: 'error',
                text: message,
                confirmButtonColor: "#00A7EF",
                timer: 30000,
            })
        }
        function newSuccessAlert(message, url) {
            Swal.fire({
                title: "Success",
                icon: 'success',
                text: message,
                confirmButtonColor: "#00A7EF",
            }).then((isConfirm) => {
                if (isConfirm) {
                    location.reload(url);
                }
            })
        }
    </script>
</head>

<body>
    <!-- Loader -->
